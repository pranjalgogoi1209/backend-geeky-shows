<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/header.ejs", { title: "Home" }) %>
  <body>
    <div class="container">
      <div class="row">
        <!-- form -->
        <div class="col-sm-12 mt-5">
          <h2 class="alert alert-success text-center">Add new student</h2>
          <form
            method="post"
            action="/student/update-student/<%= result._id %>"
          >
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                value="<%= result.name %>"
              />
            </div>
            <div class="mb-3">
              <label for="age" class="form-label">Age</label>
              <input
                type="text"
                class="form-control"
                id="age"
                name="age"
                value="<%= result.age %>"
              />
            </div>
            <div class="mb-3">
              <label for="fees" class="form-label">Fees</label>
              <input
                type="text"
                class="form-control"
                id="fees"
                name="fees"
                value="<%= result.fees %>"
              />
            </div>
            <button type="submit" class="btn btn-warning">Update</button>
            <button type="submit" class="btn btn-secondary">
              Back to Home
            </button>
          </form>
        </div>
      </div>
    </div>

    <%- include("./partials/footer.ejs", { title: "Home" }) %>
  </body>
</html>
